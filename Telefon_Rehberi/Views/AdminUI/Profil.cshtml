@model Telefon_Rehberi.Models.Account.Personel
@{
    ViewBag.Title = "Profil";
}
@{
    Telefon_Rehberi.Database.Logins logonAdmin = (Telefon_Rehberi.Database.Logins)Session["LogonAdmin"];
}
<h2>Profile</h2>
<h4>@ViewBag.Info</h4>
@{
    ViewBag.Title = string.Format("{0} {1}", Model.calisan.PersonelAdi, Model.calisan.PersonelSoyadi);

}


    <div class="col-md-9 " style="font-size:13pt;">

        <div class="form-group col-md-10 md-offset-1">
            <div class="col-md-3">
                @Html.LabelFor(model => model.calisan.PersonelAdi, "Adı", new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.calisan.PersonelAdi, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group col-md-10 md-offset-1">
            <div class="col-md-3">
                @Html.LabelFor(model => model.calisan.PersonelSoyadi, "Soyadı", new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.calisan.PersonelSoyadi, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group col-md-10 md-offset-1">
            <div class="col-md-3">
                @Html.LabelFor(model => model.calisan.PersonelTelNo, "Telefon", new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.calisan.PersonelTelNo, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group col-md-10 md-offset-1">
            <div class="col-md-3">
                @Html.LabelFor(model => model.departmanAdi, "Departman", new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.departmanAdi, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group col-md-10 md-offset-1">
            <div class="col-md-3">
                @Html.LabelFor(model => model.yoneticiAdSoyad, "Yönetici", new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.yoneticiAdSoyad, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>


    </div>
    @if (logonAdmin == null)
    {
        <div class="row">
            <div class="col-md-12 text-center" style="margin-top:20px;">
                Bilgileri Güncellemek için <a href="~/AdminUI/Login" style="font-weight:bold">Admin</a> olarak giriş yapabilirsiniz!
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-10 col-md-offset-1 text-center">
                <a href="~/AdminUI/ProfileEdit/@Model.calisan.Id" class="btn btn-warning " style="margin-right:10px;">
                    <span class="glyphicon glyphicon-edit"></span> Düzenle
                </a>

                <a type="button" onclick="Delete('@Url.Action("Delete","AdminUI", new { id = Model.calisan.Id })')" class="btn btn-danger btn">
                    <span class="glyphicon glyphicon-trash"></span> Sil
                </a>
            </div>
            <div class="col-md-12">
                &nbsp;
            </div>
        </div>
    }




@if (TempData["resultInfo"] != null)
{


    @Html.Partial("InfoModal");

    <script>$('#exampleModalCenter').modal('show');</script>
}
@Html.Partial("ResultControl", "Silmek istediğinize emin misiniz?")
    
    


